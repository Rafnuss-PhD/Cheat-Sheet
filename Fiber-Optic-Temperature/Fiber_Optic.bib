pages = {10859--10879},
title = {{Calibrating Single-Ended Fiber-Optic Raman Spectra Distributed Temperature Sensing Data}},
url = {http://www.mdpi.com/1424-8220/11/11/10859/},
volume = {11},
year = {2011}
