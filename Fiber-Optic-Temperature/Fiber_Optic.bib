keywords = {Calibration,Distributed temperature sensing (DTS),Environmental monitoring,Hydrology},
number = {5},
pages = {5471--5485},
pmid = {22778596},
title = {{Double-ended calibration of fiber-optic raman spectra distributed temperature sensing data}},
volume = {12},
